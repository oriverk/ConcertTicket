<p id="notice"><%= notice %></p>

<h1>会員一覧</h1>

<table class= "table table-hover">
  <thead class="thead-light">
    <tr>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '表示', admins_path , class:"btn btn-outline-primary"%></td>
        <td><%= link_to '削除', admins_path , method: :delete, data: { confirm: '本当によろしいですか' } , class:"btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


