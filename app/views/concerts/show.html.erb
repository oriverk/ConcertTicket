<p id="notice"><%= notice %></p>

<table class= "table table-hover">
  <thead class="thead-light">
    <tr>
      <th>コンサート情報</th>
      <th>公演日</th>
      <th><%= @concert.id %>（確認用</th>
      <th colspan="3">
    </tr>
  </thead>

  <tbody>
    <tr>
      <th><%= @concert.infomation %></th>
      <th><%= @concert.date %></th>
      <% if current_user.admin? %>
        <th><%= link_to '編集', edit_concert_path(@concert) , class:"btn btn-outline-info"%></th>
      <% end %>
    </tr>
  </tbody>
</table>

<h3>販売座席</h3>

<table class= "table table-hover">
  <thead class="thead-light">
    <tr>
      <th>席種</th>
      <th>販売数</th>
      <th>価格</th>
      <th colspan= "3">
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
    <tr>
      <th><%= detail.grade %></th>
      <th><%= detail.capacity %></th>
      <th><%= detail.price %></th>
      <td><%= link_to "購入", "#" , class:"btn btn-outline-primary" %>
      <% if current_user.admin? %>
        <th><%= link_to '編集', edit_concert_detail_path(detail) , class:"btn btn-outline-info"%></th>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

