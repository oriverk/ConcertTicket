<p id="notice"><%= notice %></p>

<table class= "table table-hover">
  <thead class="thead-light">
    <tr>
      <th>コンサート情報</th>
      <th>公演日</th>
      <th colspan="3">
    </tr>
  </thead>

  <tbody>
    <tr>
      <th><%= @concert.infomation %></th>
      <th><%= @concert.date %></th>
    </tr>
  </tbody>
</table>

<h3>販売座席</h3>

<table class= "table table-hover">
  <thead class="thead-light">
    <tr>
      <th>席種</th>
      <th>販売数</th>
      <th>価格</th>
      <th colspan= "3">
    </tr>
  </thead>

  <tbody>
    <% @concert_details.each do |concert_detail| %>
    <tr>
      <th><%= concert_detail.grade %></th>
      <th><%= concert_detail.capacity %></th>
      <th><%= concert_detail.price %></th>
      <th><%= link_to '購入申込み', new_sale_path(concert_id: @concert.id, concert_detail_id: concert_detail.id), class: "btn btn-outline-info" %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '戻る', concerts_path ,class:"btn btn-outline-info" %>