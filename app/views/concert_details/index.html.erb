<p id="notice"><%= notice %></p>

<h1>コンサート詳細</h1>

<table>
  <thead>
    <tr>
      <th>コンサート</th>
      <th>席種</th>
      <th>価格</th>
      <th>販売数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concert_details.each do |concert_detail| %>
      <tr>
        <td><%= concert_detail.concert.infomation %></td>
        <td><%= concert_detail.grade %></td>
        <td><%= concert_detail.price %>円</td>
        <td><%= concert_detail.capacity %>席</td>
        <td><%= link_to '詳細', concert_detail %></td>
        <% if current_user.admin? %>
          <td><%= link_to '編集', edit_concert_detail_path(concert_detail) %></td>
          <td><%= link_to '削除', concert_detail, method: :delete, data: { confirm: '本当によろしいですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= link_to '新規コンサート追加', new_concert_detail_path %>
<% end %>
